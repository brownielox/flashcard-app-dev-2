<h1>Make a new card</h1>

<%= form_for :card, url: cards_path do |f| %>
  <%= f.label :subject %><br>
    <%= f.text_field :subject_name, list: "subjects_autocomplete" %>
    <br>
    <datalist id="subjects_autocomplete">
      <%= Subject.all.each do |subject| %>
        <option value="<%= subject.name %>">
      <% end %>
    </datalist>

  <p>
    <%= f.label :user %><br>
      <%= f.text_field :user_name, list: "users_autocomplete" %>
      <br>
      <datalist id="users_autocomplete">
        <%= User.all.each do |u| %>
          <option value="<%= u.email %>">
        <% end %>
      </datalist>

    <p>
    <%= f.label :front %><br>
    <%= f.text_area :front %>
  </p>

  <p>
    <%= f.label :back %><br>
    <%= f.text_area :back %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
