<%= render 'nav' %>

<h1>Edit or Delete Card</h1>

<%= form_for @card, url: {action: "update"} do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
       <h2>There were some errors:</h2>
       <ul>
         <% @card.errors.full_messages.each do |m| %>
           <li><%= m %></li>
         <% end %>
       </ul>
     </div>
  <% end %>

      <div class="field<%= ' field_with_errors' if @card.errors[:front].any? %>">
        <%= f.label :front %><br>
        <%= f.text_area :front %>
      </div>


    <p>
      <%= f.label :back %><br>
      <%= f.text_area :back %>
    </p>

    <p>
      <%= f.submit %>
    </p>

    </div>
<% end %>
